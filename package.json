{
  "name": "resolve-accounting",
  "version": "1.0.0",
  "type": "module",
  "description": "Resolve Accounting Application",
  "scripts": {
    "start": "node resolve_accouting/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon resolve_accouting/server/index.js",
    "client": "cd resolve_accouting && vite",
    "build": "cd resolve_accouting && vite build",
    "preview": "cd resolve_accouting && vite preview",
    "db:create": "node resolve_accouting/server/db/create-db.js",
    "db:migrate": "node resolve_accouting/server/db/migrate-all.js",
    "db:setup": "node resolve_accouting/server/db/setup.js",
    "db:test": "node test-db-connection.js",
    "db:clear-tally": "node resolve_accouting/server/db/clear-tally-configs.js",
    "db:fix-tally": "node resolve_accouting/server/db/fix-tally-config-table.js",
    "db:truncate": "node resolve_accouting/server/db/truncate-all.js",
    "db:truncate-all": "node resolve_accouting/server/db/truncate-all.js --include-migrations",
    "setup:env": "node create-env.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lucide-react": "^0.518.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
} 